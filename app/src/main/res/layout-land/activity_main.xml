<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.Pictures"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/thirdTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@color/black"
        android:text="Нам нечего кушать!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cryCatIV" />

    <TextView
        android:id="@+id/forthTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/black"
        android:text="В лотке плохо пахнет"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/downCatIV"
        app:layout_constraintStart_toEndOf="@+id/angryCatIV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/secondTV"
        android:layout_width="191dp"
        android:layout_height="21dp"
        android:layout_marginTop="29dp"
        android:background="@color/black"
        android:text="Вставай, безработный"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/cryCatIV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/angryCatIV" />

    <ImageView
        android:id="@+id/cryCatIV"
        android:layout_width="190dp"
        android:layout_height="189dp"
        android:layout_marginEnd="-22dp"
        android:layout_marginBottom="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cat2" />

    <ImageView
        android:id="@+id/downCatIV"
        android:layout_width="162dp"
        android:layout_height="154dp"
        android:layout_marginEnd="-10dp"
        android:rotation="-91"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat4" />

    <ImageView
        android:id="@+id/angryCatIV"
        android:layout_width="169dp"
        android:layout_height="160dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="-20dp"
        android:rotationX="182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat_1" />

    <TextView
        android:id="@+id/firstTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@color/black"
        android:text="Ответить котам!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/angryCatIV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>